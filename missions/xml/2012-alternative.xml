<?xml version="1.0" encoding="utf-8"?>
<fll>

    <season year="2012" name="Senior Solutions" />

    <strings>
        <string id="chairposition"   message="Chair cannot be in base AND under the table." />
        <string id="noballs"         message="When no balls are left, the middle ball must be 'Neither'." />
        <string id="someballs"       message="When some, but not all, balls are left, the middle ball cannot be 'Neither'." />
        <string id="allballs"        message="When all balls are left, the middle ball must be 'Neither'." />
        <string id="platformstate"   message="Platform cannot be slanted AND balanced." />
        <string id="dialcombination" message="When Big Dial is on 9, Small Dial must be on 0." />
    </strings>

    <mission description="Flexibility">
        <objective id="yellowloops" description="Yellow Loops in Base" type="number" min="0" max="2" />
        <condition id="yellowloops">
            <value id="0" score="0"  />
            <value id="1" score="20" />
            <value id="2" score="40" />
        </condition>
    </mission>

    <mission description="Medicine">
        <objective id="meds" description="Green in Base, Orange Not Moved" type="yesno" />
        <condition id="meds">
            <value id="no"  score="0"  />
            <value id="yes" score="25" />
        </condition>
    </mission>

    <mission description="Helping Animals">
        <objective id="animals" description="Dog in Base" type="yesno" />
        <condition id="animals">
            <value id="no"  score="0"  />
            <value id="yes" score="20" />
        </condition>
    </mission>

    <mission description="Wood work">
        <objective id="chairbase"  description="Chare Repaired and in Base"     type="yesno" />
        <objective id="chairtable" description="Chare Repaired and under Table" type="yesno" />
        <condition id="chairbase">
            <value id="no">
                <condition id="chairtable">
                    <value id="no"  score="0"             />
                    <value id="yes" score="25"            />
                </condition>
            </value>
            <value id="yes">
                <condition id="chairtable">
                    <value id="no"  score="15"            />
                    <value id="yes" error="chairposition" />
                </condition>
            </value>
        </condition>
    </mission>

    <mission description="Videophone">
        <objective id="flags" description="Flags Fully Upright" type="number" min="0" max="2" />
        <condition id="flags">
            <value id="0" score="0"  />
            <value id="1" score="20" />
            <value id="2" score="40" />
        </condition>
    </mission>

    <mission description="Quilts">
        <objective id="quiltsblue"   description="Blue Squares Touch Target" type="number" min="0" max="2"   />
        <objective id="quiltsorange" description="Orange Squares Touch Target" type="number" min="0" max="2" />
        <condition id="quiltsblue">
            <value id="0" score="0"  />
            <value id="1" score="15" />
            <value id="2" score="30" />
        </condition>
        <condition id="quiltsorange">
            <value id="0" score="0"  />
            <value id="1" score="30" />
            <value id="2" score="60" />
        </condition>
    </mission>

    <mission description="Cooperation and Recognising Similarities">
        <objective id="coop" description="Dials on Both Fields are Parallel" type="yesno" />
        <condition id="coop">
            <value id="no"  score="0"  />
            <value id="yes" score="45" />
        </condition>
    </mission>

    <mission description="Ball Game">
        <objective id="ballcount" description="Balls on Rack" type="number" min="0" max="7" />
        <objective id="ballmiddle" description="Middle Ball" type="enum">
            <option id="your" description="Yours" />
            <option id="them" description="Theirs" />
            <option id="none" description="Neither" />
        </objective>
        <condition id="ballmiddle">
            <value id="your">
                <condition id="ballcount">
                    <value id="0" error="noballs"   />
                    <value id="1" score="70"        />
                    <value id="2" score="80"        />
                    <value id="3" score="90"        />
                    <value id="4" score="100"       />
                    <value id="5" score="110"       />
                    <value id="6" score="120"       />
                    <value id="7" error="allballs"  />
                </condition>
            </value>
            <value id="them">
                <condition id="ballcount">
                    <value id="0" error="noballs"   />
                    <value id="1" score="10"        />
                    <value id="2" score="20"        />
                    <value id="3" score="30"        />
                    <value id="4" score="40"        />
                    <value id="5" score="50"        />
                    <value id="6" score="60"        />
                    <value id="7" error="allballs"  />
                </condition>
            </value>
            <value id="none">
                <condition id="ballcount">
                    <value id="0" score="0"         />
                    <value id="1" error="someballs" />
                    <value id="2" error="someballs" />
                    <value id="3" error="someballs" />
                    <value id="4" error="someballs" />
                    <value id="5" error="someballs" />
                    <value id="6" error="someballs" />
                    <value id="7" score="70"        />
                </condition>
            </value>
        </condition>
    </mission>

    <mission description="Gardening">
        <objective id="plants" description="Base of Plants Touch Target" type="yesno" />
        <condition id="plants">
            <value id="no"  score="0"  />
            <value id="yes" score="25" />
        </condition>
    </mission>

    <mission description="Stove">
        <objective id="stove" description="All Burners are Black" type="yesno" />
        <condition id="stove">
            <value id="no"  score="0"  />
            <value id="yes" score="25" />
        </condition>
    </mission>

    <mission description="Bowling">
        <objective id="pins" description="Pins Hit" type="number" min="0" max="6" />
        <condition id="pins">
            <value id="0" score="0"  />
            <value id="1" score="7"  />
            <value id="2" score="14" />
            <value id="3" score="21" />
            <value id="4" score="28" />
            <value id="5" score="35" />
            <value id="6" score="60" />
        </condition>
    </mission>

    <mission description="Transitions">
        <objective id="platformslanted" description="Robot Only Touches Slanted Platform" type="yesno" />
        <objective id="platformbalanced" description="Robot Only Touches Balanced Platform" type="yesno" />
        <objective id="platformclear" description="Platform Only Touches Robot and Mat" type="yesno" />
        <condition id="platformclear">
            <value id="no" error="">  <!-- This shortcut prevents checking for "balanced and slanted",
                                           but I wanted to show the possibility of not writing down the
                                           full tree of possible states. -->
            <value id="yes">
                <condition id="platformslanted">
                    <value id="no">
                        <condition id="platformbalanced">
                            <value id="no"  score="0"             />
                            <value id="yes" score="65"            />
                        </condition>
                    </value>
                    <value id="yes">
                        <condition id="platformbalanced">
                            <value id="no"  score="45"            />
                            <value id="yes" error="platformstate" />
                        </condition>
                    </value>
                </condition>
            </value>
        </condition>
    </mission>

    <mission description="Strength Training">
        <objective id="strength" description="Weight raised" type="enum">
            <option id="low"  description="Low"      />
            <option id="high" description="High"     />
            <option id="none" description="Not Done" />
        </objective>
        <condition id="strength">
            <value id="none" score="0"  />
            <value id="low"  score="15" />
            <value id="high" score="25" />
        </condition>
    </mission>

    <mission description="Cardio Training">
        <objective id="dialbig"   description="Dial Big Step"   type="number" min="1" max="9" />
        <objective id="dialsmall" description="Dial Small Step" type="number" min="0" max="5" />

        <condition id="dialbig">
            <value id="1">
                <condition id="dialsmall">
                    <value id="0" score="-60" />
                    <value id="1" score="-55" />
                    <value id="2" score="-50" />
                    <value id="3" score="-45" />
                    <value id="4" score="-40" />
                    <value id="5" score="-35" />
                </condition>
            </value>
            <value id="2">
                <condition id="dialsmall">
                    <value id="0" score="-30" />
                    <value id="1" score="-25" />
                    <value id="2" score="-20" />
                    <value id="3" score="-15" />
                    <value id="4" score="-10" />
                    <value id="5" score="-5"  />
                </condition>
            </value>
            <value id="3">
                <condition id="dialsmall">
                    <value id="0" score="0"   />
                    <value id="1" score="5"   />
                    <value id="2" score="10"  />
                    <value id="3" score="15"  />
                    <value id="4" score="20"  />
                    <value id="5" score="25"  />
                </condition>
            </value>
            <value id="4">
                <condition id="dialsmall">
                    <value id="0" score="30"  />
                    <value id="1" score="35"  />
                    <value id="2" score="40"  />
                    <value id="3" score="45"  />
                    <value id="4" score="50"  />
                    <value id="5" score="55"  />
                </condition>
            </value>
            <value id="5">
                <condition id="dialsmall">
                    <value id="0" score="60"  />
                    <value id="1" score="63"  />
                    <value id="2" score="66"  />
                    <value id="3" score="69"  />
                    <value id="4" score="72"  />
                    <value id="5" score="75"  />
                </condition>
            </value>
            <value id="6">
                <condition id="dialsmall">
                    <value id="0" score="78"  />
                    <value id="1" score="91"  />
                    <value id="2" score="94"  />
                    <value id="3" score="97"  />
                    <value id="4" score="100" />
                    <value id="5" score="103" />
                </condition>
            </value>
            <value id="7">
                <condition id="dialsmall">
                    <value id="0" score="106" />
                    <value id="1" score="107" />
                    <value id="2" score="108" />
                    <value id="3" score="109" />
                    <value id="4" score="110" />
                    <value id="5" score="111" />
                </condition>
            </value>
            <value id="8">
                <condition id="dialsmall">
                    <value id="0" score="112" />
                    <value id="1" score="113" />
                    <value id="2" score="114" />
                    <value id="3" score="115" />
                    <value id="4" score="116" />
                    <value id="5" score="117" />
                </condition>
            </value>
            <value id="9">
                <condition id="dialsmall">
                    <value id="0" score="118" />
                    <value id="1" error="dialcombination" />
                    <value id="2" error="dialcombination" />
                    <value id="3" error="dialcombination" />
                    <value id="4" error="dialcombination" />
                    <value id="5" error="dialcombination" />
                </condition>
            </value>
        </condition>

    </mission>

</fll>